#!bin/bash env node

var degree = require('../')
var meow = require('meow')

var cli = meow({
  help: [
    '$ degree <c|f> <args...>'
  ]
})

var args = cli.input.toLowerCase()

if (args != 0 && args[0] == 'c') {
  return degree.celcius(args[1])
} else if (args != && args[0] == 'f') {
  return degree.farenheiht(args[1])
} else {
  throw new Error("Error args not included")
}
